<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fogaiht.shema.MainScroll"
    tools:showIn="@layout/activity_main_scroll">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90000dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="322.5dp"
            android:layout_height="225dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView">

            <ImageButton
                android:id="@+id/events"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/historia"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:background="@drawable/crono" />

            <ImageButton
                android:id="@+id/historia"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:background="@drawable/sobre"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/cronoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/events"
                android:layout_alignStart="@+id/events"
                android:layout_below="@+id/events"
                android:layout_marginTop="11dp"
                android:text="@string/crono"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/sobreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cronoText"
                android:layout_alignBottom="@+id/cronoText"
                android:layout_alignEnd="@+id/historia"
                android:layout_alignLeft="@+id/historia"
                android:layout_alignRight="@+id/historia"
                android:layout_alignStart="@+id/historia"
                android:text="@string/historia"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/site"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignLeft="@+id/historia"
                android:layout_alignStart="@+id/historia"
                android:layout_below="@+id/sobreText"
                android:layout_marginTop="13dp"
                android:background="@drawable/site" />

            <ImageButton
                android:id="@+id/mapa"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignLeft="@+id/events"
                android:layout_alignStart="@+id/events"
                android:layout_alignTop="@+id/site"
                android:background="@drawable/mapa" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq"
                android:textAlignment="center"
                android:layout_alignTop="@+id/mapText"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/mapText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/mapa"
                android:layout_alignStart="@+id/mapa"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
